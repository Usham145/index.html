<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI-Driven Health Monitoring</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.0/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .pulse {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.05);
                opacity: 0.7;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto p-6">
        <header class="text-center mb-8">
            <h1 class="text-4xl font-bold text-blue-600 mb-4">AI-Driven Health Monitoring</h1>
            <p class="text-lg text-gray-700">Enter your health data to receive predictions and recommendations.</p>
        </header>
        <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
            <form id="health-form">
                <label for="age" class="block text-sm font-medium text-gray-700 mb-2">Age:</label>
                <input type="number" id="age" name="age" required class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                
                <label for="weight" class="block text-sm font-medium text-gray-700 mb-2 mt-4">Weight (kg):</label>
                <input type="number" id="weight" name="weight" required class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                
                <label for="height" class="block text-sm font-medium text-gray-700 mb-2 mt-4">Height (cm):</label>
                <input type="number" id="height" name="height" required class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                
                <button type="submit" class="mt-4 w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                    Get Recommendations
                </button>
            </form>
        </div>
        <div id="result" class="mt-8 max-w-md mx-auto">
            <!-- Results will be displayed here -->
        </div>
    </div>
    <script>
        document.getElementById('health-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const age = document.getElementById('age').value;
            const weight = document.getElementById('weight').value;
            const height = document.getElementById('height').value;

            // Show loading spinner
            document.getElementById('result').innerHTML = `
                <div class="flex justify-center items-center mt-6">
                    <div class="w-16 h-16 border-4 border-t-4 border-blue-600 border-solid rounded-full animate-spin"></div>
                </div>
                <p class="text-center mt-4 text-gray-600">Processing your request...</p>
            `;

            const response = await fetch('/api/health', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ age, weight, height })
            });

            const data = await response.json();
            document.getElementById('result').innerHTML = `
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <h2 class="text-xl font-semibold text-blue-600 mb-2">Prediction:</h2>
                    <p class="text-gray-700 mb-4">${data.prediction}</p>
                    <h2 class="text-xl font-semibold text-blue-600 mb-2">Recommendation:</h2>
                    <p class="text-gray-700">${data.recommendation}</p>
                </div>
            `;
        });
    </script>
</body>
</html>
